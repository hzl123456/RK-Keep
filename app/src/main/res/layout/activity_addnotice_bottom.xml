<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_button_size"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical">

    <View
        style="@style/View_divider"
        android:layout_height="0.5dp"
        android:background="#33000000" />

    <com.rey.material.widget.ImageButton
        android:id="@+id/ib_add_box"
        android:layout_width="@dimen/main_button_size"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_click_ripple"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_add_box_black" />

    <TextView
        android:id="@+id/tv_now_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="adsadsadsad" />

    <com.rey.material.widget.ImageButton
        android:id="@+id/ib_note_action"
        android:layout_width="@dimen/main_button_size"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_click_ripple"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_note_action_24dp"
        android:visibility="invisible" />

</RelativeLayout>