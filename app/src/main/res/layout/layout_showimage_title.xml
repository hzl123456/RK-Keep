<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_size"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_right"
        android:singleLine="true"
        android:textColor="#979797"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_size"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_draw"
            android:layout_width="@dimen/main_button_size_40"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click_ripple"
            android:src="@drawable/ic_ink_pen_grey" />

        <ImageButton
            android:id="@+id/ib_send"
            android:layout_width="@dimen/main_button_size_40"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click_ripple"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="@dimen/main_button_size_40"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click_ripple"
            android:src="@drawable/ic_material_trash_dark" />
    </LinearLayout>


</RelativeLayout>