<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <cn.xmrk.rkandroid.widget.edittext.ClearEditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_clear_search_holo_light"
        android:hint="标题"
        android:minWidth="350dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#000000"
        android:textSize="22sp" />

    <cn.xmrk.rkandroid.widget.edittext.ClearEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/ic_clear_search_holo_light"
        android:hint="记事"
        android:minWidth="350dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#222"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="#44bdbdbd"
            android:drawableLeft="@drawable/ic_material_reminder_time_dark_little"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:visibility="gone"
            android:textSize="@dimen/text_small"
            android:text="上午10:55" />

        <TextView
            android:id="@+id/tv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44bdbdbd"
            android:visibility="gone"
            android:textSize="@dimen/text_small"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_material_reminder_location_dark_little"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="厦门北站" />
    </LinearLayout>

</LinearLayout>