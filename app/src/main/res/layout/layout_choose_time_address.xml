<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="420dp"
    android:background="@drawable/bg_whit_radio"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/layout_choose_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_button_size"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click_ripple"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="@dimen/main_button_size"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_material_reminder_time_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/choose_time"
            android:textColor="#000"
            android:textSize="@dimen/text_big" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_choose_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_button_size"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click_ripple"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="@dimen/main_button_size"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_material_reminder_location_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/choose_address"
            android:textColor="#000"
            android:textSize="@dimen/text_big" />

    </LinearLayout>

</LinearLayout>