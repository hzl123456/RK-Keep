<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#222"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="#44bdbdbd"
            android:drawableLeft="@drawable/ic_material_reminder_time_dark_little"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="上午10:55"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_notice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#44bdbdbd"
            android:drawableLeft="@drawable/ic_material_reminder_location_dark_little"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="厦门北站"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</LinearLayout>