<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="View_divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_grey</item>
    </style>

    <style name="SettingSwitch" parent="Material.Widget.Switch">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="sw_thumbColor">@color/bg_switch_thumb</item>
        <item name="sw_trackSize">16dp</item>
        <item name="sw_trackColor">@color/bg_switch_track</item>
    </style>

    <style name="WeightImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AddNoticeActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="SerachImageButton">
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>


</resources>
